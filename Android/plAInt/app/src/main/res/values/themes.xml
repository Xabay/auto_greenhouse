<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlAInt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sunlight</item>
        <item name="colorPrimaryVariant">@color/sunlight</item>
        <item name="colorOnPrimary">@color/oxford_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sunlight</item>
        <item name="colorSecondaryVariant">@color/sunlight</item>
        <item name="colorOnSecondary">@color/sunlight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:background">@color/oxford_blue</item>
        <item name="android:textColor">@color/sunlight</item>
        <item name="android:textColorPrimary">@color/sunlight</item>
        <item name="android:textColorPrimaryNoDisable">@color/sunlight</item>
