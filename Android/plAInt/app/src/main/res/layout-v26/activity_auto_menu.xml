<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AutoMenu">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/automatic_control"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMainH10"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMainV93"
        app:layout_constraintStart_toStartOf="@+id/guidelineMainV7"
        app:layout_constraintTop_toTopOf="@+id/guidelineMainH4" />

    <ImageView
        android:id="@+id/mainMoistureButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/soil_moisture"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMainH40"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMainV45"
        app:layout_constraintStart_toStartOf="@+id/guidelineMainV7"
        app:layout_constraintTop_toTopOf="@+id/guidelineMainH20"
        app:srcCompat="@drawable/moisture" />

    <ImageView
        android:id="@+id/mainLightButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/lighting"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMainH40"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMainV93"
        app:layout_constraintStart_toStartOf="@+id/guidelineMainV55"
        app:layout_constraintTop_toTopOf="@+id/guidelineMainH20"
        app:srcCompat="@drawable/light" />

    <ImageView
        android:id="@+id/mainTempButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/temperature"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMainH65"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMainV45"
        app:layout_constraintStart_toStartOf="@+id/guidelineMainV7"
        app:layout_constraintTop_toTopOf="@+id/guidelineMainH45"
        app:srcCompat="@drawable/temperature" />

    <ImageView
        android:id="@+id/mainHumidityButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/humidity"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMainH65"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMainV93"
        app:layout_constraintStart_toStartOf="@+id/guidelineMainV55"
        app:layout_constraintTop_toTopOf="@+id/guidelineMainH45"
        app:srcCompat="@drawable/humidity" />

    <ImageView
        android:id="@+id/mainFanButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/fan_control"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMainH90"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMainV45"
        app:layout_constraintStart_toStartOf="@+id/guidelineMainV7"
        app:layout_constraintTop_toTopOf="@+id/guidelineMainH70"
        app:srcCompat="@drawable/fan" />

    <ImageView
        android:id="@+id/mainManualButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/manual_control"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMainH90"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMainV93"
        app:layout_constraintStart_toStartOf="@+id/guidelineMainV55"
        app:layout_constraintTop_toTopOf="@+id/guidelineMainH70"
        app:srcCompat="@drawable/manual" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainV7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainV45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainV55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainV93"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainH4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainH10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainH20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainH40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainH45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainH65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainH70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMainH90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

</androidx.constraintlayout.widget.ConstraintLayout>