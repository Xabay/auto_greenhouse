<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TempMenu">

    <TextView
        android:id="@+id/temTemperatureText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:text="@string/temperature"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTempH16"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTempV93"
        app:layout_constraintStart_toStartOf="@+id/guidelineTempV7"
        app:layout_constraintTop_toTopOf="@+id/guidelineTempH8" />

    <SeekBar
        android:id="@+id/temTemperatureBar"
        style="@android:style/Widget.DeviceDefault.Light.SeekBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:accessibilityLiveRegion="none"
        android:max="50"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTempH24"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTempV80"
        app:layout_constraintStart_toStartOf="@+id/guidelineTempV7"
        app:layout_constraintTop_toTopOf="@+id/guidelineTempH16"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/temTemperatureValue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTempH24"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTempV93"
        app:layout_constraintStart_toStartOf="@+id/guidelineTempV80"
        app:layout_constraintTop_toBottomOf="@+id/temTemperatureText" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/temTemperatureGraph"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTempH76"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTempV93"
        app:layout_constraintStart_toStartOf="@+id/guidelineTempV7"
        app:layout_constraintTop_toTopOf="@+id/guidelineTempH32"
        app:srcCompat="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/temSaveButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/save"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTempH92"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTempV37"
        app:layout_constraintStart_toStartOf="@+id/guidelineTempV7"
        app:layout_constraintTop_toTopOf="@+id/guidelineTempH84" />

    <Button
        android:id="@+id/temCancelButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/cancel"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTempH92"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTempV93"
        app:layout_constraintStart_toStartOf="@+id/guidelineTempV63"
        app:layout_constraintTop_toTopOf="@+id/guidelineTempH84" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTempV7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTempV37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.37" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTempV63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.63" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTempV80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTempV93"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTempH8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTempH16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTempH24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTempH32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTempH76"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTempH84"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTempH92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92" />


</androidx.constraintlayout.widget.ConstraintLayout>